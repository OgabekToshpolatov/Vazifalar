@model IEnumerable<Classroom.Web.Data.Classroom>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
   <div class="row pt-4">
       <div class="col-6">
             <h2 class="text-primary">Class List</h2>
       </div>
       <div class="col-6 text-end">
            <a asp-controller="ClassRoom" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle-fill"></i> &nbsp; Create New Class
            </a>
       </div>
   </div>
   <br></br>


<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <th>
            Class Name
        </th>
        <th></th>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.Name
                </td>
                <td>
                    <div class="w-50 btn-group" role="group" align="right">
                         @* <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id"\
                         class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a> *@
                         <a asp-controller="ClassRoom" asp-action="Delete" asp-route-id="@obj.Id"\
                         class="btn btn-danger mx-2"><i class="bi bi-trash3"></i>Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>