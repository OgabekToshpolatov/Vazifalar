@using BlogMvc.Data
@inject AppDbContext DbContext

<h1>Contacts</h1>

<table class="table table-striped table-bordered border-primary">
    <thead>
    <tr>
         <th>No</th>
         <th>Name</th>
         <th>Email</th>
         <th>Message</th>
    </tr>
    </thead>
    <tbody>
    @{
        var contacts = DbContext.Contacts.ToList();
        int k = 0;
        foreach (var contact in contacts)
        {
            k++;
            <tr>
                 <td>@k</td>
                 <td>@contact.Name</td>
                 <td>@contact.Email</td>
                 <td>@contact.Message</td>
                @* <td><a asp-action="ClassroomById" asp-route-id="@classroom.Id" class="btn btn-primary">Edit</a></td> *@
            </tr>
        }
    }
    </tbody>
</table>