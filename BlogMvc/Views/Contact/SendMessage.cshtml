@model SendMessageViewModel
<h1>Contact Us</h1>

<form method="post" enctype="multipart/form-data">
  <div class="mb-3">
    <label asp-for="@Model.Name" class="form-label">Name</label>
    <input type="text" asp-for="@Model.Name" class="form-control" placeholder="Name">
  </div>
  <div class="mb-3">
    <label asp-for="@Model.Email" class="form-label">Email</label>
    <input type="text" asp-for="@Model.Email" class="form-control" placeholder="Email">
  </div>
  <div class="mb-3">
    <label asp-for="@Model.Message" class="form-label">Message</label>
    <textarea asp-for="@Model.Message" class="form-control"></textarea>
  </div>
  
  <button type="submit" class="btn btn-primary">Create</button>
</form>