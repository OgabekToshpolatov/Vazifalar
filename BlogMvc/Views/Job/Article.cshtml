@model JobViewModel

<div class="Card">
   
<div class="card-left">
        <p>@Model.Name</p>
    <p>@Model.Description</p>
    <p>@Model.Company</p>
    <p>@Model.PhoneNumber</p>
    <p>@Model.CategoryId</p>
    <span>@Model.CreatedDate</span>
</div>
    <div class="card-right">
         <img src="@Model.Image" alt="image">
    </div>
</div>


<style>
      .Card{
        margin-top: 100px;
      display: flex;
      align-items: center;
      justify-content: space-between;
      flex-wrap: wrap;
      @* border: 2px solid grey; *@
    }
    .card-rigth>img{
        width: 310px;
        height: 310px;
        border-radius: 100%;
    }
    .card-left{
