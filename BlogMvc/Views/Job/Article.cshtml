@model JobViewModel




<div class="Card">
   
   <div class="card-top">
  <h1 style="text-transform:capitalize">@Model.Name</h1>
    <div class="card-left">
     <p>@Model.Description</p>
   </div>
   <div class="card-rigth">
     <img src="@Model.Image" alt="image">
   </div>
   </div>

   <div class="card-bottom">
