@using BlogMvc.Data
@inject AppDbContext DbContext

<h1>Categories</h1>

<table class="table table-striped table-bordered border-primary">
    <thead>
    <tr>
         <th>No</th>
         <th>Name</th>
    </tr>
    </thead>
    <tbody>
    @{
        var categories = DbContext.Categories.ToList();
        int k = 0;
        foreach (var category in categories)
        {
            k++;
            <tr>
                 <td>@k</td>
                 <td>@category.Name</td>
                @* <td><a asp-action="ClassroomById" asp-route-id="@classroom.Id" class="btn btn-primary">Edit</a></td> *@
            </tr>
        }
    }
    </tbody>
</table>