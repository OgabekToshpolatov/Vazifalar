@model RegisterViewModel

<h1>Register Page</h1>

<form method="post" enctype="multipart/form-data">
  <input hidden="true" asp-for="@Model.ReturnUrl">
  <div class="mb-3">
    <label asp-for="@Model.Username" class="form-label">Username</label>
    <input type="text" asp-for="@Model.Username" class="form-control" placeholder="username">
  </div>
  <div class="mb-3">
    <label asp-for="@Model.Password" class="form-label">Password</label>
    <input type="password" asp-for="@Model.Password" class="form-control">
  </div>
  <div class="mb-3">
    <label asp-for="@Model.Avatar" class="form-label">Avatar</label>
    <input type="file" accept="image/*" asp-for="@Model.Avatar" class="form-control">
  </div>
  <button type="submit" class="btn btn-primary">Register</button>
</form>