@model PostViewModel

<div class="Card">
   
   <div class="card-top">
  <h1 style="text-transform:capitalize">@Model.Name</h1>
    <div class="card-left">
     <p>@Model.Description</p>
   </div>
   <div class="card-rigth">
     <img src="@Model.Image" alt="image">
   </div>
   </div>

   <div class="card-bottom">
    <p style="font-weight:600">Adress: <span >@Model.Address</span></p>
     <p style="font-weight:600">Phone number: <span style="font-weight:400">@Model.PhoneNumber</span></p>
   </div>
</div>


<style>
  h1{
     position: absolute;
  top: 100px;
  left: 2;
  }
    .Card{
        margin-top: 100px;
      display: flex;
      flex-direction: column;
      flex-wrap: wrap;
    }
    .card-top{
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    .card-bottom{
      margin-top: 30px;
      display: flex;
      align-items: flex-start;
      gap: 200px;
    }
    .card-top> .card-left >p{
      width: 700px;
      line-height: 30px;
    }
    .card-rigth>img{
        width: 350px;
        height: 350px;
        border-radius: 30px;
    }
    .card-left{
        @* width: 300px; *@
    }
</style>