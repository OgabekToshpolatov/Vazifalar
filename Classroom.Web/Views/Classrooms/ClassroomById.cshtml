@model Classroom.Web.Data.Classroom


<h1>@Model.Name</h1>

<table class="table table-striped table-bordered border-primary">
    <thead>
    <tr>
        <th>No</th>
        <th>Name</th>
        <th>Email</th>
    </tr>
    </thead>
    <tbody>
    @{
        int k = 0;
        foreach (var user in Model.Users)
        {
            k++;
            <tr>
                <td>@k</td>
                <td>@user.User?.UserName</td>
                <td>@user.User?.Email</td>
            </tr>
        }
    }
    </tbody>
</table>

<h1>Tasks</h1>

<table class="table table-striped table-bordered border-primary">
    <thead>
        <tr>
            <th>No</th>
            <th>Title</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @{
            k = 0;
            foreach (var task in Model.Tasks)
            {
                k++;
                <tr>
                    <td>@k</td>
                    <td>@task.Title</td>
                    <td>@task.Description</td>
                </tr>
            }
        }
    </tbody>
</table>